@model MyApp.Models.Item

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit an item</h3>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <lable formaction="Name">Name</lable>
        <input type="text" class="form-control" asp-for="Name" />
    </div><br />
    <div class="form-group">
        <lable formaction="Name">Price</lable>
        <input type="number" class="form-control" asp-for="Price" />
    </div><br />
    <div class="form-group">
        <label for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
    </div><br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>